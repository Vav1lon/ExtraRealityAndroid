<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:minWidth="100dp"
        android:gravity="left"
        android:layout_marginRight="500dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить на склад"
        android:id="@+id/addWH"
        android:layout_marginRight="143dp"
        android:width="300dp"
        android:height="80dp"
        android:layout_above="@+id/moveWH"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перевести на другой склад"
        android:id="@+id/moveWH"
        android:width="300dp"
        android:height="80dp"
        android:layout_above="@+id/spisat"
        android:layout_alignLeft="@+id/addWH"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Списать"
        android:id="@+id/spisat"
        android:width="300dp"
        android:height="80dp"
        android:layout_above="@+id/not_found"
        android:layout_alignLeft="@+id/moveWH"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщить об отсутствии"
        android:id="@+id/not_found"
        android:width="300dp"
        android:height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/spisat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Считать штрихкод"
        android:id="@+id/read"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addWH"
        android:layout_marginTop="69dp"
        android:width="300dp"
        android:height="80dp" />
</RelativeLayout>